<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#fafafa"
        android:text="Denal Check-up "
        android:textSize="20dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/dental_che"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/oral"
            android:textColor="#000000"
            android:text="Oral Hygiene"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@+id/rg5"
            android:layout_alignTop="@+id/rg5" />
        <RadioGroup
            android:layout_toRightOf="@+id/oral"
            android:layout_margin="5dp"
            android:id="@+id/rg5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/oralgood"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:checked="false" />
            <RadioButton
                android:id="@+id/oralfair"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fair" />
            <RadioButton
                android:id="@+id/oralpoor"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poor" />
        </RadioGroup>

        <TextView
            android:id="@+id/carocious"
            android:layout_below="@+id/rg5"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:text="Carious Teeth"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_toRightOf="@+id/carocious"
            android:id="@+id/rg6"
            android:layout_below="@+id/rg5"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/calyes"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:checked="false" />
            <RadioButton
                android:id="@+id/calno"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>
        <TextView
            android:id="@+id/flourosis"
            android:textColor="#000000"
            android:text="Flouosis "
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@+id/rg7"
            android:layout_below="@+id/rg6" />
        <RadioGroup
            android:layout_below="@+id/carocious"
            android:layout_toRightOf="@+id/flourosis"
            android:id="@+id/rg7"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/floyes"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:checked="false" />
            <RadioButton
                android:id="@+id/flono"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:id="@+id/orthodontic"
            android:textColor="#000000"
            android:text="Orthodontic Treatment  "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/rg8"
            android:layout_below="@+id/rg7"
            android:layout_alignParentStart="true" />
        <RadioGroup
            android:layout_below="@id/flourosis"
            android:layout_toRightOf="@+id/orthodontic"
            android:id="@+id/rg8"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/othoyes"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Yes"
                android:checked="false" />

            <RadioButton
                android:id="@+id/orthono"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />

        </RadioGroup>

        <TextView
            android:id="@+id/indication"
            android:textColor="#000000"
            android:text="Indication For Extraction    "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@+id/rg9"
            android:layout_below="@+id/rg8" />
        <RadioGroup
            android:id="@+id/rg9"
            android:layout_below="@+id/orthodontic"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/indication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/ieyes"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:checked="false" />
            <RadioButton
                android:id="@+id/ieno"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>
    </RelativeLayout>
    <TableLayout
        android:layout_toRightOf="@+id/dental_che"
        android:layout_margin="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <Spinner
                android:entries="@array/dental_cavities1"
                android:prompt="@string/country_prompt"
                android:id="@+id/spinner11"
                android:background="@drawable/txtbox_row_border"
                android:spinnerMode="dropdown"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                ></Spinner>
            <Spinner
                android:entries="@array/dental_cavities2"
                android:prompt="@string/country_prompt"
                android:id="@+id/spinner12"
                android:background="@drawable/txtbox_row_border"
                android:spinnerMode="dropdown"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                ></Spinner>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <Spinner
                android:entries="@array/dental_cavities1"
                android:prompt="@string/country_prompt"
                android:id="@+id/spinner21"
                android:background="@drawable/txtbox_row_border"
                android:spinnerMode="dropdown"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                ></Spinner>
            <Spinner
                android:entries="@array/dental_cavities2"
                android:prompt="@string/country_prompt"
                android:id="@+id/spinner22"
                android:background="@drawable/txtbox_row_border"
                android:spinnerMode="dropdown"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                ></Spinner>
        </TableRow>
    </TableLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description     "
            android:textSize="20dp"
            android:textColor="#000000"
            />
        <EditText
            android:padding="5dp"
            android:id="@+id/dentaldesc"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shapee" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="Referral Made"/>
    <CheckBox
        android:onClick="SelectItem"
        android:id="@+id/dentalref"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"/>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Doctor Name and Reg No"
            android:textSize="18dp"
            />
        <ImageView
            android:id="@+id/imageii4"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>

</LinearLayout>