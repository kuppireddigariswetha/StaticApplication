<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#fafafa"
        android:text="Without Glasses"
        android:textSize="20dp"/>
    <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/withoutright"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Right"
            android:textColor="#000000"
            android:textSize="20dp"/>
        <Spinner
            android:entries="@array/color_blind"
            android:prompt="@string/country_prompt"
            android:id="@+id/spinner1"
            android:background="@drawable/txtbox_row_border"
            android:spinnerMode="dropdown"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/withoutright"
            android:layout_toEndOf="@+id/withoutright"
            android:layout_alignTop="@+id/withoutright"
            android:layout_alignBottom="@+id/withoutright"></Spinner>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Left"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/spinner1"
            android:id="@+id/withoutleft"/>
        <Spinner
            android:entries="@array/color_blind"
            android:prompt="@string/country_prompt"
            android:id="@+id/spinner2"
            android:background="@drawable/txtbox_row_border"
            android:spinnerMode="dropdown"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/withoutleft"
            android:layout_toEndOf="@+id/withoutleft"
            android:layout_alignTop="@+id/withoutleft"
            android:layout_alignBottom="@+id/withoutleft"></Spinner>
    </RelativeLayout>
    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#fafafa"
        android:text="With Glasses"
        android:textSize="20dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/withright"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Right"
            android:textColor="#000000"
            android:textSize="20dp"/>
        <Spinner
            android:entries="@array/color_blind"
            android:prompt="@string/country_prompt"
            android:id="@+id/spinner3"
            android:background="@drawable/txtbox_row_border"
            android:spinnerMode="dropdown"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/withright"
            android:layout_toEndOf="@+id/withright"
            android:layout_alignTop="@+id/withright"
            android:layout_alignBottom="@+id/withright"></Spinner>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Left"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/spinner3"
            android:id="@+id/withleft"/>
        <Spinner
            android:entries="@array/color_blind"
            android:prompt="@string/country_prompt"
            android:id="@+id/spinner4"
            android:background="@drawable/txtbox_row_border"
            android:spinnerMode="dropdown"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/withleft"
            android:layout_toEndOf="@+id/withleft"
            android:layout_alignTop="@+id/withleft"
            android:layout_alignBottom="@+id/withleft"></Spinner>
    </RelativeLayout>
</LinearLayout>