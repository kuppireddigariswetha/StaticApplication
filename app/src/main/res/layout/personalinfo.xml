<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
        android:id="@+id/relative1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
              <LinearLayout
                  android:id="@+id/layouttt"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                      <include layout="@layout/unique_id"/>
              </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/personal"
            android:layout_below="@+id/layouttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:textColor="#fafafa"
            android:text="Personal Information"
            android:textSize="20dp"/>
        <TextView
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:id="@+id/namee"
            android:layout_below="@+id/personal"
            android:padding="5dp"
            android:text="Name *   "
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_toRightOf="@+id/namee"
            android:padding="5dp"
            android:digits="abcdefghijklmnopqrstuvwxyz . ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:id="@+id/enamee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapee"
            android:layout_below="@+id/personal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
        <TextView
            android:textColor="#000000"
            android:id="@+id/fahername"
            android:padding="5dp"
            android:text="Father Name         "
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/namee" />
        <EditText
            android:layout_margin="5dp"
            android:padding="5dp"
            android:digits="abcdefghijklmnopqrstuvwxyz .ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:id="@+id/efathername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapee"
            android:layout_below="@+id/enamee"
            android:layout_toRightOf="@+id/fahername" />
        <TextView
            android:textColor="#000000"
            android:id="@+id/schoolname"
            android:padding="5dp"
            android:text="School name         "
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/fahername" />
        <EditText
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/eschoolname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapee"
            android:layout_below="@+id/efathername"
            android:layout_toRightOf="@+id/schoolname" />
        <TextView
            android:textColor="#000000"
            android:id="@+id/district"
            android:padding="5dp"
            android:text="District   "
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/eschoolname"
            android:layout_alignBottom="@+id/edistrict" />
        <EditText
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/edistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapee"
            android:layout_below="@+id/eschoolname"
            android:layout_toRightOf="@+id/district" />
        <TextView
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:id="@+id/dob"
            android:layout_below="@+id/district"
            android:padding="5dp"
            android:text="Date of birth "
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    <!--   <DatePicker
           android:paddingTop="5dp"
           android:padding="5dp"
           android:id="@+id/edob"
           android:background="@drawable/shapee"
           android:layout_below="@+id/edistrict"
           android:inputType="date"
           android:layout_toRightOf="@+id/name"
           android:layout_toEndOf="@+id/name"
           android:layout_width="150dp"
           android:layout_height="wrap_content">

       </DatePicker>-->
        <EditText
            android:paddingTop="5dp"
            android:padding="5dp"
            android:id="@+id/edob"
            android:focusable="false"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shapee"
            android:layout_below="@+id/edistrict"
            android:inputType="date"
            android:layout_alignLeft="@+id/edistrict"
            android:layout_alignStart="@+id/edistrict" />
        <ImageView
            android:background="@drawable/shapee"
            android:layout_below="@+id/edistrict"
            android:id="@+id/eimage"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/image"
            android:layout_width="100dp"
            android:layout_toRightOf="@+id/edob"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/emobile" />
            <TextView
            android:textColor="#000000"
            android:id="@+id/mobile"
            android:layout_below="@+id/dob"
            android:padding="5dp"
            android:text="Mobile *"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
        <EditText
            android:paddingTop="5dp"
            android:padding="5dp"
            android:id="@+id/emobile"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shapee"
            android:inputType="number"
            android:layout_alignBottom="@+id/mobile"
            android:layout_below="@+id/dob"
            android:layout_toLeftOf="@+id/eimage"
            android:layout_alignLeft="@+id/edob"
            android:layout_alignStart="@+id/edob" />
        <TextView
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:id="@+id/adno"
            android:layout_below="@+id/mobile"
            android:padding="5dp"
            android:text="AD No "
            android:textSize="20dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <EditText
            android:padding="5dp"
            android:id="@+id/eAdno"
            android:layout_width="100dp"
            android:layout_toRightOf="@+id/adno"
            android:layout_height="wrap_content"
            android:background="@drawable/shapee"
            android:layout_below="@+id/mobile"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
            <TextView
                android:textColor="#000000"
            android:id="@+id/clas"
                android:padding="5dp"
            android:text="Class *"
            android:textSize="20dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_alignTop="@+id/eclas"
                android:layout_toLeftOf="@+id/eAdno"
                android:layout_alignLeft="@+id/adno"
                android:layout_alignStart="@+id/adno" />
        <EditText
            android:padding="5dp"
            android:id="@+id/eclas"
            android:inputType="number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shapee"
            android:layout_below="@+id/eAdno"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignRight="@+id/eAdno"
            android:layout_alignEnd="@+id/eAdno"
            android:layout_toRightOf="@+id/clas"
            android:layout_toEndOf="@+id/clas" />
            <TextView
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:id="@+id/section"
            android:layout_toRightOf="@+id/eAdno"
            android:layout_below="@+id/eimage"
            android:padding="5dp"
            android:text="Section * "
            android:textSize="20dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/esection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapee"
            android:layout_below="@+id/eexamdate"
            android:layout_toRightOf="@+id/section" />
        <TextView
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:id="@+id/examdate"
            android:layout_toRightOf="@+id/eAdno"
            android:layout_below="@+id/section"
            android:padding="5dp"
            android:text="Date of exam"
            android:textSize="20dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_margin="5dp"
            android:padding="5dp"
            android:inputType="textCapCharacters"
            android:id="@+id/eexamdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapee"
            android:layout_below="@+id/eimage"
            android:layout_toRightOf="@+id/examdate" />
        </RelativeLayout>

</LinearLayout>